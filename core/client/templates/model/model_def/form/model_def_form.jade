template(name="model_def_form")
	form
		+labeled_input_text(name="name" parent_form="model_def_form_tabs" label = "Model Name")
		br
		br
		if isEditing
			+button_add_new_field
			br
			label Fields:
			+array_table(data=fields)

		br
		+data_list(label = "Owner Id" name="ownerId" id="ownerId" model_name="user" display_value="email" option_value="meteorUserId" parent_form="model_def_form_tabs")
		br
		br
		+labeled_checkbox(label="Show Table Operation" name="showTableOperation" id="showTableOperation" parent_form="model_def_form_tabs")
		br
		br
		+labeled_checkbox(label="Is Base Model" name="isBaseModel" id="isBaseModel" parent_form="model_def_form_tabs")
		br
		br
		+labeled_input_text(name="summaryProperty" parent_form="model_def_form_tabs" label = "Summary Property Name")
		br
		br
		if isEditing
			+button_update_model_def_form
		else
			+button_save_model_def_form

		+button_cancel_model_def_form




